{
    "name": "nugget-app",
    "version": "1.0.0",
    "description": "Video Editor",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "bundle": "webpack --mode=production",
        "build:osx": "electron-builder build --mac",
        "build:win": "electron-builder build --win portable --x64"

    },
    "build": {
        "productName": "Nugget",
        "appId": "kr.devent.nugget",

        "asar": true,
        "asarUnpack": [
            "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
            "node_modules/ffmpeg-static/index.js",
            "node_modules/ffmpeg-static/package.json"
        ],
        "protocols": {
            "name": "nugget",
            "schemes": [
                "nugget"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icons/mac/icon.icns",
            "asarUnpack": "**/*.node"
        },
        "dmg": {
            "internetEnabled": true
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "./assets/icons/win/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "buildResources": "./assets/",
            "output": "./dist/",
            "app": "."
        }
    },
    "author": "Dipokal",
    "dependencies": {
        "css-loader": "^6.7.1",
        "electron-is-dev": "^2.0.0",
        "electron-reload": "^2.0.0-alpha.1",
        "ffmpeg-static": "^5.1.0",
        "fluent-ffmpeg": "^2.1.2",
        "jszip": "^3.10.1",
        "mini-css-extract-plugin": "^2.6.1",
        "sass": "^1.55.0",
        "sass-loader": "^13.0.2",
        "style-loader": "^3.3.1",
        "uuid": "^9.0.0",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "devDependencies": {
        "electron": "^20.3.1",
        "electron-builder": "^23.3.3"
    }
}
